{
	"name": "claude-skills-cli",
	"version": "0.0.7",
	"description": "CLI toolkit for creating and managing Claude Agent Skills",
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"claude-skills-cli": "./dist/index.js"
	},
	"files": [
		"dist",
		"docs",
		"README.md"
	],
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"build": "tsc",
		"postbuild": "rm -rf dist/skills && cp -r .claude/skills dist/skills",
		"dev": "tsc --watch",
		"start": "node ./dist/index.js",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build && changeset publish",
		"prepublishOnly": "pnpm run build"
	},
	"keywords": [
		"claude",
		"skills",
		"cli",
		"agent",
		"anthropic",
		"claude-code"
	],
	"author": "Scott Spence",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/claude-skills-cli.git"
	},
	"bugs": {
		"url": "https://github.com/spences10/claude-skills-cli/issues"
	},
	"homepage": "https://github.com/spences10/claude-skills-cli#readme",
	"dependencies": {
		"chalk": "^5.6.2",
		"archiver": "^7.0.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.9.0",
		"@types/archiver": "^7.0.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3"
	}
}